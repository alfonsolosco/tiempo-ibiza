<body>

  <header>
    <h2>Tiempo Ibiza</h2>
    <input id="search" type="text" placeholder="Buscar zona... (Ej: Ibiza)">
  </header>

  <section class="forecast">
    <h3>Previsión de lluvia por horas</h3>
    <iframe src="https://www.eltiempo.es/ibiza.html" height="300"></iframe>
  </section>

  <section>
    <iframe id="radar" src="https://www.rainalarm.com/es/#38.9063,1.4206,9" allowfullscreen></iframe>
  </section>

  <script>
    // Refrescar el radar cada 60 segundos
    setInterval(() => {
      const radar = document.getElementById("radar");
      radar.src = radar.src;
    }, 60000);

    // Cambiar zona (básico)
    document.getElementById("search").addEventListener("change", (e) => {
      const city = e.target.value.toLowerCase().replace(/\s+/g, "-");
      document.querySelector(".forecast iframe").src = `https://www.eltiempo.es/${city}.html`;
    });
  </script>

</body>
